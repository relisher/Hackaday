<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
        android:id="@+id/widget0"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
            android:id="@+id/authors"
            android:layout_width="200dp"
            android:layout_height="51dp"
            android:layout_x="56dp"
            android:layout_y="258dp">
        <TextView
                android:id="@+id/authors_text"
                android:layout_width="151dp"
                android:layout_height="51dp"
                android:gravity="center"
                android:text="@string/projectauthor" android:layout_gravity="right|center_vertical"/>
    </FrameLayout>
    <FrameLayout
            android:id="@+id/title"
            android:layout_width="196dp"
            android:layout_height="47dp"
            android:layout_x="55dp"
            android:layout_y="18dp">
        <TextView
                android:id="@+id/app_title_text"
                android:layout_width="130dp"
                android:layout_height="76dp"
                android:gravity="center"
                android:text="@string/app_name" android:layout_gravity="right|center_vertical" android:textSize="24sp"/>
    </FrameLayout>
    <FrameLayout
            android:id="@+id/contributors"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_x="56dp"
            android:layout_y="310dp">
        <TextView
                android:id="@+id/contributors_text"
                android:layout_width="139dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:text="@string/contributors" android:layout_gravity="right|center_vertical"/>
    </FrameLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:tools="http://schemas.android.com/tools"
                 android:layout_x="56dp"
                 android:layout_y="116dp"
                 android:layout_width="198dp"
                 android:layout_height="87dp"
                 tools:context=".AboutPlusOneFragment">

        <com.google.android.gms.plus.PlusOneButton
                xmlns:plus="http://schemas.android.com/apk/lib/com.google.android.gms.plus"
                android:id="@+id/plus_one_button"
                android:layout_width="126dp"
                android:layout_height="87dp"
                plus:size="standard"
                plus:annotation="inline" android:layout_gravity="right|center_vertical"/>

    </FrameLayout>
</AbsoluteLayout>

