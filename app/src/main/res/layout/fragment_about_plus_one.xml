<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".AboutPlusOneFragment">

    <com.google.android.gms.plus.PlusOneButton
            xmlns:plus="http://schemas.android.com/apk/lib/com.google.android.gms.plus"
            android:id="@+id/plus_one_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            plus:size="large"
            plus:annotation="inline" android:layout_gravity="center"/>
    <TextView
            android:layout_width="350dp"
            android:layout_height="206dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Copyright Â© 2014 | Hackaday, Hack A Day, and the Skull and Wrenches Logo are Trademarks of Hackaday.com "
            android:id="@+id/textView2" android:layout_gravity="center_horizontal|bottom" android:enabled="true"/>
    <TextView
            android:layout_width="108dp"
            android:layout_height="435dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView" android:layout_gravity="center" android:text="@string/app_name"
            android:textSize="@dimen/abc_text_size_title_material" android:enabled="true"/>

</FrameLayout>
